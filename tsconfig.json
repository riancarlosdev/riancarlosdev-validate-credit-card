{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
    "module": "commonjs",
    "rootDir": "./lib",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
